{block head}

{/block}


{block content}

<div class="pane">
  <div class="board">
  <div n:class="panel, panel-info">
  <div class="panel-heading"><h3 class="panel-title">Seznam voleb</h3></div>
  <div class="panel-body">
           {if empty($elections)}
             V současnosti nejsou vypsány žádné volby.
           {else}

                 <a n:href="Nominations:add">
                  <button type="button" class="btn btn-default btn-sm">
                    <span class="glyphicon glyphicon-king" aria-hidden="true"></span> Vypsat nové nominace
                  </button>
                </a>
           <!-- <hr/> -->
            {foreach $elections as $id => $election}

             <div class="row">
             <hr/>

                <div class="col-md-6">{$election->name}</div>
                  <div class="col-md-6">
                                 <a data-confirm="modal"
                  data-confirm-title="Potvrď"
                  data-confirm-text="Opravdu chceš smazat tyto volby? Smazáním voleb budou ztraceny nominace. Vyexportuj je proto nejdřív třeba do Excelu."
                  data-confirm-ok-class="btn-danger"
                  data-confirm-ok-text="Smazat"
                  data-confirm-cancel-class="btn-success"
                  data-confirm-cancel-text="Zrušit"
                  n:href="delete! $election->id_election">
                  <button type="button" class="btn btn-default btn-sm" style="float: right">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> 
                  </button>
              </a>
                              <a n:href="Nominations:edit $election->id_election">
                  <button type="button" class="btn btn-default btn-sm" style="float: right">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                  </button>
                </a>
                  <a n:href="Nominations:overview $election->id_election">
                  <button type="button" class="btn btn-default btn-sm" style="float: right">
                    <span class="glyphicon glyphicon-blackboard" aria-hidden="true"></span>
                  </button>
                </a>


               </div>
          </div> 
                 <!--  
                <div class="container">
                 <div class="col-md-auto">
                   
                 </div>
                 <div class="col-md-auto">

                 </div>
                 </div> -->

<!--                 <p><strong>od:</strong> {$election->from|date:'%d.%m.%Y %H:%M'}</p>
                <p><strong>do:</strong> {$election->to|date:'%d.%m.%Y %H:%M'}</p> -->
                
 
            {/foreach}
           {/if}

           
    </div>
   </div>
  </div>
 </div>
</div>

{/block}


